<h1>ESPN Leagues</h1>

<table>
<% @leagues.each do |league| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

    <td class="list_name">
      <dl>
        <dt><%= league.name %></dt>
      </dl>
    </td>

    <td class="list_actions">

      <%= link_to 'Show', league %>,<br />
      <%= link_to 'Edit', edit_league_path(league) %><br />
    </td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New League', new_league_path %>
