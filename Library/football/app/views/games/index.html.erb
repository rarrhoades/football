<h1>Listing games</h1>

<table>
  <tr>
    <th>Week</th>
    <th>Home team</th>
    <th>Home team name</th>
    <th>Home score</th>
    <th>Away team</th>
    <th>Away team name</th>
    <th>Away score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= game.week %></td>
    <td><%= game.home_team.user.full_name %></td>
    <td><%= game.home_team_name %></td>
    <td><%= game.home_score %></td>
    <td><%= game.away_team.user.full_name %></td>
    <td><%= game.away_team_name %></td>
    <td><%= game.away_score %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

